---
import Header from "../components/Header.astro";
const { title = "Jason P. Dicker" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="color-scheme" content="light dark" />
    <link rel="icon" href="/favicon.svg" />

    <style>
      /* ---------- Theme tokens ---------- */

:root{
  /* airy lab palette */
  --bg: #fbfcfe;
  --fg: #0b1220;
  --muted: rgba(11,18,32,.62);

  --card: rgba(255,255,255,.78);
  --card-solid: #ffffff;
  --border: rgba(11,18,32,.10);

  --shadow: 0 10px 30px rgba(11,18,32,.08);
  --shadow-soft: 0 6px 18px rgba(11,18,32,.06);

  --pill: rgba(11,18,32,.05);
  --accent: #0b1220;

  --radius: 18px;
  --radius-sm: 14px;

  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
  letter-spacing: -0.01em;
}

:root.dark{
  --bg: #070913;
  --fg: #eef2ff;
  --muted: rgba(238,242,255,.65);

  --card: rgba(17,19,32,.62);
  --card-solid: #0f1222;
  --border: rgba(238,242,255,.12);

  --shadow: 0 14px 40px rgba(0,0,0,.35);
  --shadow-soft: 0 10px 28px rgba(0,0,0,.28);

  --pill: rgba(238,242,255,.08);
  --accent: #eef2ff;
}

/* ---------- Base ---------- */
body{
  margin: 0;
  background:
    radial-gradient(1200px 700px at 20% -10%, rgba(64,139,255,.10), transparent 55%),
    radial-gradient(1000px 600px at 85% 0%, rgba(146,97,255,.10), transparent 55%),
    var(--bg);
  color: var(--fg);
  line-height: 1.65;
}

.wrap{
  max-width: 980px;
  margin: 0 auto;
  padding: 0 22px 76px;
}

.page{
  padding-top: 34px;
}

h1,h2,h3{
  letter-spacing: -0.03em;
  line-height: 1.15;
  margin: 0;
}

h1{ font-size: clamp(34px, 4vw, 46px); }
h2{ font-size: 22px; margin-top: 0; }
p{ color: var(--muted); margin: 12px 0; }

a{
  color: inherit;
  text-decoration: none;
}

a:hover{
  text-decoration: none;
}

/* ---------- Components ---------- */
.card{
  border: 1px solid var(--border);
  background: var(--card);
  border-radius: var(--radius);
  padding: 18px;
  box-shadow: var(--shadow-soft);
  backdrop-filter: blur(10px);
  transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
}

.card:hover{
  transform: translateY(-2px);
  box-shadow: var(--shadow);
  border-color: color-mix(in srgb, var(--border) 70%, transparent);
}

.grid{
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 16px;
  margin-top: 18px;
}

.pill{
  display:inline-flex;
  align-items:center;
  gap: 6px;
  padding: 6px 10px;
  border-radius: 999px;
  background: var(--pill);
  border: 1px solid var(--border);
  font-size: 13px;
  color: var(--muted);
}



     /* ---------- Header ---------- */

.site-header {
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: blur(16px);
  background: color-mix(in srgb, var(--bg) 80%, transparent);
  border-bottom: 1px solid var(--border);
}

.site-header-inner{
  max-width: 980px;
  margin: 0 auto;
  padding: 14px 22px;

  display: grid;
  grid-template-columns: auto 1fr; /* brand, then flexible space */
  align-items: center;
  column-gap: 22px;
}

.nav {
  width: 100%;
  padding: 18px 40px;

  display: flex;
  justify-content: space-evenly;   /* evenly across screen */
  align-items: center;
}


.brand-link {
  font-weight: 800;
  font-size: 18px;
  letter-spacing: -0.02em;
  white-space: nowrap;
}


.nav-link {
  text-align: center;
  font-weight: 500;
  font-size: 15px;
  padding: 8px 0;
  color: var(--muted);
  position: relative;
  transition: color .2s ease;
}

/* animated underline */
.nav-link::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 100%;
  height: 2px;
  background: var(--accent);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.25s ease;
}

.nav-link:hover {
  color: var(--fg);
}

.nav-link:hover::after {
  transform: scaleX(1);
}

.nav-link.active {
  color: var(--fg);
  font-weight: 700;
}

.nav-link.active::after {
  transform: scaleX(1);
}

/* ---------- Dropdown ---------- */

.dropdown {
  position: relative;
}

.dropdown-menu {
  position: absolute;
  top: calc(100% + 14px);
  left: 0;
  min-width: 200px;
  padding: 10px;
  border-radius: 14px;
  border: 1px solid var(--border);
  background: var(--card);
  box-shadow: var(--shadow);
  display: none;
}

.dropdown-menu a {
  display: block;
  padding: 8px 10px;
  border-radius: 10px;
  text-decoration: none;
  color: var(--muted);
  font-size: 14px;
  transition: background 0.2s ease;
}

.dropdown-menu a:hover {
  background: var(--pill);
  color: var(--fg);
}

.dropdown:hover .dropdown-menu {
  display: block;
}

/* ---------- Theme Button ---------- */

.theme-btn {
  border: 1px solid var(--border);
  background: var(--card);
  border-radius: 12px;
  padding: 6px 10px;
  cursor: pointer;
  font-size: 14px;
  transition: transform 0.15s ease;
}

.theme-btn:hover {
  transform: scale(1.08);
}

    </style>
  </head>

  <body>
    <Header />
    <div class="wrap page">
      <slot />
      <footer>
        © {new Date().getFullYear()} Jason P Dicker — built as a living notebook.
      </footer>
    </div>
  </body>
</html>
